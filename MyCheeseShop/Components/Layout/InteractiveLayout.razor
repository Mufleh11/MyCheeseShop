@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using MyCheeseShop.Context
@using MyCheeseShop.Model
@inherits LayoutComponentBase
@layout MyCheeseShop.Components.Layout.MainLayout
@inject DatabaseContext DatabaseContext
@inject ShoppingCart ShoppingCart
@inject ProtectedSessionStorage ProtectedSessionStorage

@Body







@code {
    protected async override Task OnAfterRenderAsync(bool firstrender)
    {
        if(firstrender)
        {
            var result = await ProtectedSessionStorage.GetAsync<List<CartItem>>("cart");
            var items = result.Success ? result.Value : null;
            if(items is not null && items.Any())
            {
                items.ForEach(item =>
                {
                    var exisiting = DatabaseContext.Cheeses.Local.FirstOrDefault(cheese => cheese.Id == item.Cheese.Id);
                    if (exisiting == null)
                    {
                        DatabaseContext.Cheeses.Attach(item.Cheese);
                    }

                });
                ShoppingCart.SetItems(items);

            }
        }
       
        
    }
    

   

}
    